<%= render 'shared/title', title: "Show Post"%>

<div class "row">
	<div class="col-md-8 well">
	  <h3><%= @post.title%></h3>
	  <p>
	    <%= @post.content%>
	  </p>
	</div>
</div>

<% @post.comments.each do |comment|%>
	<div class="col-md-6 well">
	  <p>
	    <%= comment.content%>
	  </p>
	</div>
<% end %>

<br>
<br>
<%= link_to 'go back to all posts', posts_path %>